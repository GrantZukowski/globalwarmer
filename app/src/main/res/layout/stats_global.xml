<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/globalStatsHeader"
        android:layout_gravity="center_horizontal"
        android:paddingTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityOneName"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityOneButton"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityTwoName"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityTwoButton"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityThreeName"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityThreeButton"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityFourName"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityFourButton"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityFiveName"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cityFiveButton"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="next region"
        android:layout_gravity="right"
        android:id="@+id/nextButton"/>

    <Button
        android:id="@+id/backToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Search"
        android:layout_gravity="left"
        android:paddingTop="15dp"
        />

</LinearLayout>